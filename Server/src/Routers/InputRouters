const { Router } = require("express")
const router = Router();

const connecttodb = require ( "../mongo")



connecttodb.connectmondb();

let db = connecttodb.getinterface();


// number of images to be read from the database

let numImages = 5;

// let the data be 
var data = [
    { image1 : "url1"},
    {image2 : "url2" },
    {image3 : "url3" },
    {image4 : "url4"},
    {image5 : "url5" },

]

router.get("/images",(request,response) => {
    response.send(data)
})

router.get("/images/:id" , (request , response) => {
    var imageid = request.params.id
    response.send(data[imageid]);
})


module.exports = router;